<body class="align-itmes-center justify-content-center m-5">
  <div class="align-itmes-center justify-content-center">
    <div class=" card border-primary p-5 larger shadow" >

      <h2 class="text-center">Your Consents</h2>

      <form action="/consent/add" method="POST" class="">
        <div class="form-group">
          <input type="text" name="website" class="form-control" placeholder="Website or company name" required>
        </div>

        <div class="form-group">
          <input type="text" name="dataShared" class="form-control"
            placeholder="Which type of Data Shared (comma separated)" required>
        </div>

        <div class="form-group">
          <input type="text" class="form-control" name="email" placeholder=" Mail for data share">
        </div>

        <div class="form-group">
          <input type="text" name="purpose" class="form-control" placeholder="Purpose of data shering" required>
        </div>

        <div class="form-group d-flex " style="width: 30vw; height: 5vh;">
          <select name="consentGiven" class="form-control " style="width: 30vw; height: 40px;">
            <option value="true">Given</option>
            <option value="false">Revoked</option>
          </select>
          <button type="submit" class="btn btn-primary" style="width:100vw; margin-left: 20px; height: 40px; ">Give_Consent</button>
        </div>


      </form>
    <!-- </div> -->
  </div>
  <ul class="mt-5">
    <% consents.forEach(consent=> { %>
      <li>
        <b>
          <%= consent.website %>
        </b> - <%= consent.dataShared.join(', ') %> - <%= consent.email %> - <%= consent.purpose %> - <%= consent.consentGiven ? ' Given'
          : 'Revoked' %>
          <a href="/consent/delete/<%= consent._id %>">Delete</a>
      </li>
      <% }) %>
  </ul>
  <a href="/consent/export">Export Data</a>
</body>

